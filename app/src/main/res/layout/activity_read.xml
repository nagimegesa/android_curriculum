<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".read.ReadActivity"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/read_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <LinearLayout
            android:layout_alignParentBottom="true"
            android:id="@+id/read_bottom_info"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="bottom">
        </LinearLayout>
        <LinearLayout
            android:background="@color/my_gray"
            android:id="@+id/read_bottom_setting"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_gravity="bottom"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/read_last_page"
                    android:layout_weight="1"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:text="上一页"/>

                <SeekBar
                    android:id="@+id/read_seek_bar"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_width="300dp"
                    android:layout_height="50dp" />
                <Button
                    android:id="@+id/read_next_page"
                    android:layout_weight="1"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:text="下一页" />
            </LinearLayout>
            <RadioGroup
                android:id="@+id/read_radio_group"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <RadioButton
                    android:drawableTop="@drawable/menu"
                    android:id="@+id/read_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    style="@style/read_radio_style"
                    android:text="目录" />
                <RadioButton
                    android:drawableTop="@drawable/night"
                    android:id="@+id/read_night_mode"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    style="@style/read_radio_style"
                    android:text="夜间模式" />
                <RadioButton
                    android:drawableTop="@drawable/set"
                    android:id="@+id/read_setting"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    style="@style/read_radio_style"
                    android:text="设置" />
            </RadioGroup>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>