<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:id="@+id/top_relative"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/setting_toolbar_bg">

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="10dp"
            android:text="设置"
            android:textColor="@color/white"
            android:textSize="15dp" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/sv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--   阅读设置  -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:text="阅读设置"
                    android:textColor="@color/setting_textprimary" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_reset_screen"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/setting_common_bg"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="left"
                    android:text="@string/setting_fontSize"
                    android:textColor="@color/setting_textsecondary"
                    android:textSize="15dp" />

                <Spinner
                    android:id="@+id/sp_setFontSize"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:clickable="true"
                    android:dropDownWidth="90dp"
                    android:entries="@array/size_array"
                    android:gravity="center" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_show_music"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/setting_common_bg"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="背景音乐"
                    android:textColor="@color/setting_textsecondary"
                    android:textSize="15dp" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/sc_music_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:clickable="true"
                    android:longClickable="false" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_show_night"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/setting_common_bg"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="夜间模式"
                    android:textColor="@color/setting_textsecondary"
                    android:textSize="15dp" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/sc_night_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:clickable="true"
                    android:longClickable="false" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_swipe_mode"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/setting_common_bg"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="上滑"
                    android:textColor="@color/setting_textsecondary"
                    android:textSize="15dp" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/sc_swipe_mode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:clickable="true"
                    android:longClickable="false" />

            </RelativeLayout>

            <!--          其他设置              -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:text="其他设置"
                    android:textColor="@color/setting_textprimary" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/test_show_status"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/setting_common_bg"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="测试功能"
                    android:textColor="@color/setting_textsecondary"
                    android:textSize="15dp" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/test_sc_volume2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:clickable="true"
                    android:longClickable="false" />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>